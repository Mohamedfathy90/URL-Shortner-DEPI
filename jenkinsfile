pipeline {
  agent any

  environment {
    DOCKERHUB_CREDENTIALS = credentials('dockerhub-credentials')
    IMAGE_NAME = "mohfathy/url-shortner-depi-app"
    AWS_REGION = "us-east-1"  
    CLUSTER_NAME = "depi-graduation"  
  }

  stages {
    stage('Checkout') {
      steps {
        git branch: 'main', url: 'https://github.com/Mohamedfathy90/URL-Shortner-DEPI.git'
      }
    }

    stage('Build Docker Image') {
      steps {
        sh 'docker build -t $IMAGE_NAME:latest .'
      }
    }

    stage('Push to DockerHub') {
      steps {
        sh '''
          echo $DOCKERHUB_CREDENTIALS_PSW | docker login -u $DOCKERHUB_CREDENTIALS_USR --password-stdin
          docker push $IMAGE_NAME:latest
        '''
      }
    }
    
    stage('Configure AWS + kubectl') {
      steps {
        withAWS(credentials: 'AWS' , region: "${AWS_REGION}") {
          sh '''   
            echo "Updating kubeconfig for EKS..."
            aws eks update-kubeconfig --region $AWS_REGION --name $CLUSTER_NAME
          '''
        }
      }
    }    

    stage('Deploy to EKS') {
      steps {
        sh '''
          echo "Deploying to EKS cluster..."
          kubectl set image deployment/myapp myapp=mohfathy/url-shortner-depi-app:latest -n app
          kubectl rollout restart deployment/myapp -n app
          kubectl rollout status deployment/myapp -n app
        '''
      }
    }

    stage('Run Laravel Migrations') {
      steps {
        sh '''
          echo "Running Laravel migrations..."
          POD_NAME=$(kubectl get pods -n app -l app=myapp -o jsonpath="{.items[0].metadata.name}")
          kubectl exec -n app $POD_NAME -- php artisan migrate --force
        '''
      }
    }

  }
}
